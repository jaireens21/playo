<%- layout('./layout/boilerplate.ejs') %>

<form method="POST" action="/register" class="w-50 mx-auto needs-validation" novalidate>
    <h1 class="text-center">Enter details for New User:</h1>
    <div class="mb-3">
        <label for="username">Username:</label>
        <input class="form-control" type="text" name="username" id="username" required>
        <div class="invalid-feedback">
            Required!
        </div>
    </div>
    <div class="mb-3">
        <label for="email">Email id:</label>
        <input class="form-control" type="email" name="email" id="email" required aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        <div class="invalid-feedback">
            A valid email id is required!
        </div>
    </div>
    <div class="mb-3">
        <label for="password">Password:</label>
        <input class="form-control" type="password" name="password" id="password" required aria-describedby="passwordHelpBlock">
        <div id="passwordHelpBlock" class="form-text">
            Your password must be 8-16 characters long, contain atleast 1 uppercase letter, 1 lowercase letter, 1 digit and 1 special character.
          </div>
        <div class="invalid-feedback">
            Required!
        </div>
    </div>
    <p>Select a role:</p>
    <div class="form-check ">
        <input class="form-check-input" id="player" type="radio" name="role" value="player"  checked required >
        <label class="form-check-label" for="player">Player</label>
    </div>
    <div class="form-check mb-3 ">
    <input class="form-check-input" id="owner" type="radio" name="role" value="owner"  required>
    <label class="form-check-label" for="owner">Arena Owner</label>
    <div class="invalid-feedback">Must select either Player or Arena Owner</div>
    </div>
    

    <button type="submit" class="btn btn-success my-3 me-3">Register</button>
    <a href="/" class="btn btn-dark">Cancel</a>
</form>
