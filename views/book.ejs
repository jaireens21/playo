<%- layout('./layout/boilerplate.ejs') %>

  
  
<div class="w-50 mx-auto mt-5">

    <h1>welcome to booking page</h1>
    <h2><%=arena.name%></h2>
    <h3><%=arena.location%></h3>
     
    <form method="POST" action="/arenas/<%=arena._id%>/book" class="needs-validation" novalidate>
        <div class="form-group mb-3">
            <label class="form-label" for="sport-select">Select Sport: </label>
            <select class="form-control" id="sport-select" name="sport" required>
                <option value="">Please Choose an Option</option>
                <%for (let sport of arena.sports){%>
                    <option value=<%=sport%>> <%=sport%> </option>
                <%}%>
            </select>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        
        <div class="form-group mb-3">
            <label class="form-label" for="date-select">Select Date:</label>
            <input class="form-control" type="date" id="date-select" name="date" min=<%=today%> max="2022-12-31" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>


        <div class="form-group mb-3">
            <label class="form-label" for="time-select">Select Time: </label>
            <select class="form-control" id="time-select" name="time" required>
                <option value="">Please Choose an Option</option>
                <% for(let i=arena.startTiming; i<arena.endTiming; ++i){%>
                <option value=<%=i%>><%=i%>:00 hrs</option>
                <% } %>
            </select>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/arenas/<%=arena._id%>" class="btn btn-dark">Cancel</a>

    </form>

    
</div>