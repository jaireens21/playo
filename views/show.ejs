<%- layout('./layout/boilerplate.ejs') %>

  
    
  <!-- image carousal -->
  <div class="carousel slide showpageImages w-75 mx-auto" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%=arena.image%>" class="d-block" alt="...">
      </div>
      <!-- <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
      </div> -->
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>



  <div class="card showpageTitle w-75 mx-auto my-5" >
    <div class="card-body">
      <h5 class="card-title"><%=arena.name%></h5>
      <p class="card-text"><%=arena.location%></p>
    </div>
  </div>

  <!-- grid -->
  <div class="showpageElements w-75 mx-auto">
      
    <div class="card showpageActivities ">
      <div class="card-header">
        ACTIVITIES AVAILABLE
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%for (let sport of arena.sports){%>
          &nbsp; â€¢ <%=sport%>
          <%}%>
        </li>
      </ul>
    </div>

    <div class="card showpageDescription ">
      <div class="card-header">
        ADDITIONAL INFORMATION
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=arena.description%></li>
        <li class="list-group-item"><span>Price : $ </span> <%=arena.price%> per hour</li>
      </ul>
    </div>

    <div class="card showpageTimings ">
      <div class="card-header">
        TIMINGS
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=arena.timing%></li>
      </ul>
    </div>

    <div class="card showpageLocation">
      <div class="card-header">
        LOCATION
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=arena.location%>
          <div class="d-flex justify-content-center">
        
            <iframe id="gMap"width="100%" height="250" title="Google Maps integration for location" src="https://maps.google.com/maps?q=<%=arena.location%>&t=&z=15&ie=UTF8&iwloc=&output=embed" loading="lazy"></iframe>
            
          </div>
        </li>
      </ul>
      
    </div>

    <!-- power user controls -->
    <div class="card showpageControls">
      <div class="card-body d-flex justify-content-between">
        <a href="/arenas/<%=arena._id%>/edit" class="btn btn-primary mr-3">Edit</a>
        <form method="POST" action="/arenas/<%=arena._id%>?_method=DELETE">
          <button class="btn btn-danger mx-3" type="submit">DELETE</button>
        </form>
        <a href="/arenas/list" class="btn btn-dark">Back to all Arenas</a>
      </div>
    </div>
  
  </div>

