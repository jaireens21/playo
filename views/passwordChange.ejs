<%- layout('./layout/boilerplate.ejs') %>

<form method="POST" action="/users/<%=loggedUser.id%>/changePwd" class="w-50 mx-auto needs-validation my-5" novalidate>
    <h1 class="text-center">Change Password</h1>
       
    <div class="my-3">
        <label for="oldPassword">Enter Old Password:</label>
        <input class="form-control" type="password" name="oldPassword" id="oldPassword" required>
        <div class="invalid-feedback">
            Required!
        </div>
    </div>
    <div class="mb-3">
        <label for="newPassword">Enter New Password:</label>
        <input class="form-control" type="password" name="newPassword" id="newPassword" onchange="passwordComplexityCheck(this)" required aria-describedby="passwordHelpBlock">
        <div id="passwordHelpBlock" class="form-text">
            Your password must be 8-16 characters long, contain atleast 1 uppercase letter, 1 lowercase letter, 1 digit and 1 special character.
        </div>
        <div class="invalid-feedback">
            Required!
        </div>
    </div>
    <div class="mb-3">
        <label for="confirm">Confirm New Password:</label>
        <input class="form-control" type="password" name="confirm" id="confirm" onchange="confirmNewPassword(this)" required>
        <div class="invalid-feedback">
            Required!
        </div>
    </div>
    
    <button type="submit"  class="btn btn-success my-3">Change Password</button>
    
</form>

