<%- layout('./layout/boilerplate.ejs') %>

<div class="mx-auto my-5 myBookingsDiv">
    <h1 class="text-center">My Bookings</h1>

    <table class="table table-hover my-5 mx-auto">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Time (hrs)</th>
            <th scope="col">Sport</th>
            <th scope="col">Arena</th>
            <!-- <th scope="col">Location</th> -->
          </tr>
        </thead>
        <tbody>
            <%for (let i=0;i<user.bookings.length;++i){ %>
                <tr>
                    <th scope="row"><%=i+1%></th>
                    <!-- date -->
                    <td><%=user.bookings[i].date.getDate()%>-<%=user.bookings[i].date.getMonth()+1%>-<%=user.bookings[i].date.getFullYear()%></td>

                    <!-- time -->
                    <td> <%= user.bookings[i].time%1==0?user.bookings[i].time:user.bookings[i].time-0.5 %>:<%= user.bookings[i].time%1==0?'00':'30' %> </td>

                    <!-- sport -->
                    <td><%=user.bookings[i].sport%></td>

                    <!-- link to arena -->
                    <td><a href="/arenas/<%=user.bookings[i].arenaId._id%>"> <%=user.bookings[i].arenaId.name%> </a></td>

                    <!-- arena location -->
                    <!-- <td>
                      <%=user.bookings[i].arenaId.location%>
                    </td> -->
                </tr>
            <%}%>
          
        </tbody>
      </table>

    
</div>
